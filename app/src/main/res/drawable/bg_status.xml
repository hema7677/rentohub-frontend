<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#E8F5E9"/>

    <!-- Rounded corners -->
    <corners android:radius="12dp"/>

    <!-- Optional border -->
    <stroke
        android:width="1dp"
        android:color="#2E7D32"/>

    <!-- Inner padding -->
    <padding
        android:left="8dp"
        android:top="4dp"
        android:right="8dp"
        android:bottom="4dp"/>
</shape>
